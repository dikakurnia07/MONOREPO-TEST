{
  "name": "test-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "build:docs": "turbo build --filter=docs",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:docs": "turbo dev --filter=docs",
    "lint": "turbo lint",
    "lint:web": "turbo lint --filter=web",
    "lint:docs": "turbo lint --filter=docs",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "next": "^14.0.0",
    "webpack": "^5.88.0",
    "turbo": "^2.3.0",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
